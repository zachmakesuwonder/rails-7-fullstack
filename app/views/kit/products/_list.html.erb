<div class="sticky top-16 bg-white overflow-x-hidden overflow-y-auto no-scrollbar shrink-0 border-r border-slate-200 w-80 h-[100vh]">
  <!-- #Marketing group -->
  <div>
    <!-- Group header -->
    <div class="sticky top-0 z-10">
      <div class="flex items-center bg-white border-b border-slate-200 px-5 h-16">
        <div class="w-full flex items-center justify-between">
          <div class="relative">
            <h1 class="font-semibold text-slate-800">
              <%= link_to "Products", kit_products_path %>
            </h1>
          </div>
          <!-- Edit button -->
          <%= link_to new_kit_product_path,
                      aria: { label: "New product" },
                      class: "p-1.5 shrink-0 rounded border border-slate-200 hover:border-slate-300 shadow-sm ml-2" do %>
            <svg class="w-4 h-4 fill-current" viewBox="0 0 16 16">
              <path d="M15 7H9V1c0-.6-.4-1-1-1S7 .4 7 1v6H1c-.6 0-1 .4-1 1s.4 1 1 1h6v6c0 .6.4 1 1 1s1-.4 1-1V9h6c.6 0 1-.4 1-1s-.4-1-1-1z"></path>
            </svg>
          <% end %>
        </div>
      </div>
    </div>
    <!-- Group body -->
    <div class="px-5 py-4">
      <!-- Search form -->
      <%= search_form_for @q, class: "relative" do |f| %>
        <%= f.label :name_start, class: "sr-only" %>
        <%= f.search_field :name_start, class: "form-input w-full pl-9 focus:border-slate-300", placeholder: "Search..." %>
        <%= f.button :submit, class: "absolute inset-0 right-auto group" do %>
          <svg class="w-4 h-4 shrink-0 fill-current text-slate-400 group-hover:text-slate-500 ml-3 mr-2" viewBox="0 0 16 16" xmlns="http://www.w3.org/2000/svg">
            <path d="M7 14c-3.86 0-7-3.14-7-7s3.14-7 7-7 7 3.14 7 7-3.14 7-7 7zM7 2C4.243 2 2 4.243 2 7s2.243 5 5 5 5-2.243 5-5-2.243-5-5-5z" />
            <path d="M15.707 14.293L13.314 11.9a8.019 8.019 0 01-1.414 1.414l2.393 2.393a.997.997 0 001.414 0 .999.999 0 000-1.414z" />
          </svg>
        <% end %>
      <% end %>
      <!-- Direct messages -->
      <div class="mt-4">
        <ul class="mb-6">
          <% @kit_products.each do |kit_product| %>
            <li class="-mx-2">
              <%= link_to kit_product,
                          aria: { label: "Edit this product" },
                          class: class_names("flex items-center justify-between w-full p-2 rounded", { "bg-indigo-100": current_page?(kit_product_path(kit_product)) }) do %>
                <div class="flex items-center truncate">
                  <div class="truncate">
                    <span class="text-sm font-medium text-slate-800"><%= kit_product.name %></span>
                  </div>
                </div>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
